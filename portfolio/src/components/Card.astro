---
interface Props {
	title: string;
	subtitle: string;
	body: string;
	href: string;
	color_50: string;
	color_100: string;
	color_200: string;
	color_300: string;
	color_400: string;
	color_500: string;
	color_600: string;
	color_700: string;
	color_800: string;
	color_900: string;
	color_950: string;
	color_white: string;
}

const { 
	title,
	subtitle,
	body,
	href,
	color_50,
	color_100,
	color_200,
	color_300,
	color_400,
	color_500,
	color_600,
	color_700,
	color_800,
	color_900,
	color_950,
	color_white,
} = Astro.props;

const debug_outline="1px";
---

<article class="link-card">
	<a href={href}>
		<div class="top">
			<h3>{subtitle}</h3>
		</div>
		<div class="middle">
			<h2>
				{title}
				<img src="/icons/arrow-up-right.svg" alt="external link icon" />
			</h2>
			<p>
				{body}
			</p>
		</div>
		<div class="bottom">
			<h3>bottom</h3>
		</div>
	</a>
</article>

<style define:vars={{debug_outline, color_500, color_950}}>
	.link-card {
		display: flex;
		background-color: var(--color_950);
		border: 1px solid var(--color_500);
		min-width: 100px;
		max-width: 200px;
		min-height: 300px;
		border-radius: 10px;
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		padding-left: calc(1.5rem - 10px);
		color: white;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		align-items: flex-start;
	}
	.link-card div:nth-child(2) {
		padding-left: 10px;
	}
	.top {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
	}
	.middle {
	}
	.bottom {
		color: transparent;
	}
	h2 {
		margin: 0;
		font-size: 2rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	h3 {
		font-size: 0.8rem;
	}
	p {
		margin-top: 0.5rem;
	}
</style>
