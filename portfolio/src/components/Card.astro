---
const { color_palette } = await import('@portfolio/consts.json');

interface Props {
	title: string;
	subtitle: string;
	body: string;
	href: string;
}

const { 
	title,
	subtitle,
	body,
	href,
} = Astro.props;

const background_color = color_palette.color_700;
const border_color = color_palette.color_300_transparent;
---

<article class="link-card">
	<a href={href}>
		<div class="top">
			<h3>{subtitle}</h3>
		</div>
		<div class="middle">
			<h2>
				{title}
				<img src="/icons/arrow-up-right.svg" alt="external link icon" />
			</h2>
			<p>
				{body}
			</p>
		</div>
		<div class="bottom">
			<h3>bottom</h3>
		</div>
	</a>
</article>

<style define:vars={{background_color, border_color}}>
	.link-card {
		display: flex;
		background-color: var(--background_color);
		box-shadow: 3px 3px 6px 0 hsla(0, 0%, 100%, 0.2);
		border: 1px solid var(--border_color);
		min-width: 100px;
		max-width: 200px;
		min-height: 300px;
		border-radius: 7px;
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		padding-left: calc(1.5rem - 10px);
		color: white;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		align-items: flex-start;
	}
	.link-card div:nth-child(2) {
		padding-left: 10px;
	}
	.top {
		display: flex;
		flex-direction: column;
		align-items: flex-start;
	}
	.middle {
	}
	.bottom {
		color: transparent;
	}
	h2 {
		margin: 0;
		font-size: 2rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	h3 {
		font-size: 0.8rem;
	}
	p {
		margin-top: 0.5rem;
	}
</style>
