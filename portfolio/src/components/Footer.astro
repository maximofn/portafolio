---
import GoToSiteTransparent from '@components/GoToSiteTransparent.astro';

const { social_links } = await import('@portfolio/consts.json');

interface Props {}

const {} = Astro.props;

const debug_outline = '0px';
---

<footer>
    <GoToSiteTransparent
        text="Page code"
        svg="@icons/arrow-up-right-from-square.svg"
        url={social_links.portfolio_link_internal}
        target="_blank"
    ></GoToSiteTransparent>
</footer>

<style>
    footer {
        margin-top: 200px;
        margin-bottom: 50px;
        display: flex;
        flex-direction: row;
        justify-content: space-around;
    }
</style>