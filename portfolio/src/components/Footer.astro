---
import GoToSiteTransparent from './GoToSiteTransparent.astro';

interface Props {
    huggingface_svg_path: string;
    github_svg_path: string;
    linkedin_svg_path: string;
    x_svg_path: string;
    kaggle_svg_path: string;
    facebook_svg_path: string;
    instagram_svg_path: string;
    tiktok_svg_path: string;
    twitch_svg_path: string;
    youtube_svg_path: string;
    curriculum_svg_path: string;
    huggingface_link: string;
    github_link: string;
    linkedin_link: string;
    x_link: string;
    kaggle_link: string;
    facebook_link: string;
    instagram_link: string;
    tiktok_link: string;
    twitch_link: string;
    youtube_link: string;
    curriculum_link: string;
    portfolio_link: string;
	color_50: string;
	color_100: string;
	color_200: string;
	color_300: string;
	color_400: string;
	color_500: string;
	color_600: string;
	color_700: string;
	color_800: string;
	color_900: string;
	color_950: string;
	color_white: string;
}

const { 
    huggingface_svg_path,
    github_svg_path,
    linkedin_svg_path,
    x_svg_path,
    kaggle_svg_path,
    facebook_svg_path,
    instagram_svg_path,
    tiktok_svg_path,
    twitch_svg_path,
    youtube_svg_path,
    curriculum_svg_path,
    huggingface_link,
    github_link,
    linkedin_link,
    x_link,
    kaggle_link,
    facebook_link,
    instagram_link,
    tiktok_link,
    twitch_link,
    youtube_link,
    curriculum_link,
    portfolio_link,
	color_50,
	color_100,
	color_200,
	color_300,
	color_400,
	color_500,
	color_600,
	color_700,
	color_800,
	color_900,
	color_950,
	color_white,
} = Astro.props;

const debug_outline = '0px';
---

<footer>
    <GoToSiteTransparent
        text="Page code"
        svg="icons/arrow-up-right-from-square.svg"
        url={portfolio_link}
        target="_blank"
        color_50 ={color_50}
        color_100={color_100}
        color_200={color_200}
        color_300={color_300}
        color_400={color_400}
        color_500={color_500}
        color_600={color_600}
        color_700={color_700}
        color_800={color_800}
        color_900={color_900}
        color_950={color_950}
        color_white={color_white}
    ></GoToSiteTransparent>
</footer>

<style define:vars={{debug_outline, color_white}}>
    footer {
        margin-top: 200px;
        margin-bottom: 50px;
        display: flex;
        flex-direction: row;
        justify-content: space-around;
    }
</style>