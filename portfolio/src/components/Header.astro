---
import Home from './Home.astro';
import SocialLinks from './SocialLinks.astro';
import CountriesFlags from './CountriesFlags.astro';
import { ViewTransitions } from 'astro:transitions'

const { colors } = await import('../../consts.json');

interface Props {}

const {} = Astro.props;

const debug_outline = '0px';
---

<header>
    <Home
        title="MaximoFN", 
        url='/'
        icon="/icons/MFN-512x512.webp"
    ></Home>
    <div class=rigth-header>
        <div class=header-links>
            <a href="/blog">Proyectos</a>
            <a href="/blog">Blog</a>
            <a href="/blog">Contacto</a>
            <!-- <a href="/components">Componentes</a> -->
        </div>
        <SocialLinks></SocialLinks>
        <CountriesFlags></CountriesFlags>
    </div>
    <ViewTransitions />
</header>

<style define:vars={{debug_outline, colors}}>
    .rigth-header {
        outline: var(--debug_outline) solid blue;
        display: flex;
        flex-direction: row;
        flex-flow: wrap-reverse;
        justify-content: flex-end;
        align-items: center;
        gap: 20px
    }

    .header-links {
        outline: var(--debug_outline) solid red;
        display: flex;
        flex-direction: row-reverse;
        flex-flow: wrap-reverse;
        justify-content: flex-end;
        align-items: center;
        gap: 20px;
    }

    a {
        outline: var(--debug_outline) solid yellow;
        text-decoration: none;
        color: var(--colors.color_white);
    }

    header {
        outline: var(--debug_outline) solid green;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        z-index: 10;
        padding: 0px 20px;
        position: sticky;
        top: 0;
        backdrop-filter: blur(2px);
        padding-top: 20px;
    }
</style>