---
interface Props {
	title: string;
	url: string;
	icon: string;
}

const { 
	title,
	url,
	icon,
} = Astro.props;

const debug_outline = '0px';
---

<nav>
    <a href={url}>
        <img onerror="this.parentNode.removeChild(this)" onerror="this.parentNode.removeChild(this)" decoding="async" src={icon} alt={title}/>
    </a>
</nav>

<style define:vars={{debug_outline}}>
    img {
        width: 50px;
        height: 50px;
        scale: 2;
    }
    
    a {
        outline: var(--debug_outline) solid red;
    }
    nav {
        width: 120px;
    }
</style>