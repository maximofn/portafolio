---
interface Props {
	body: string;
	color_50: string;
	color_100: string;
	color_200: string;
	color_300: string;
	color_400: string;
	color_500: string;
	color_600: string;
	color_700: string;
	color_800: string;
	color_900: string;
	color_950: string;
	color_white: string;
}

const { 
	body,
	color_50,
	color_100,
	color_200,
	color_300,
	color_400,
	color_500,
	color_600,
	color_700,
	color_800,
	color_900,
	color_950,
	color_white,
} = Astro.props;

const debug_outline="1px";
---

<article class="pill">
	<p>{body}</p>
</article>

<style define:vars={{debug_outline, color_500, color_950}}>
	.pill {
		background-color: var(--color_950);
		border: 1px solid var(--color_500);
		border-radius: 10px;
		min-width: 50px;
		max-width: 500px;
		min-height: 100px;
	}
	p {
		font-size: 1.5rem;
		margin: 30px;
	}
</style>
