---
const { color_palette } = await import('../../consts.json');
const { colors } = await import('../../consts.json');

interface Props {
	title: string;
	description: string;
	image_path: string;
	post_link: string;
}

const {
	title,
	description,
	image_path,
	post_link,
} = Astro.props;

const post_card_border_color = color_palette.color_300;
---

<article class="post-card">
	<a href={post_link}>
		<img class="post-img" src={image_path} alt={title} loading="lazy" />
	</a>
	<div class="post-content">
		<a href={post_link}>
			<h3>{title}</h3>
		</a>
		<p>{description}</p>
	</div>
	
</article>

<style define:vars={{colors, post_card_border_color}}>
	.post-card {
		display: flex;
		flex-direction: row;
		justify-content: flex-start;
		align-items: flex-start;
		gap: 10px;
		border-top: var(--post_card_border_color) solid 1px;
		border-bottom: var(--post_card_border_color) solid 1px;
		border-radius: 10px;
		width: 100%;
		padding: 30px 15px;
		margin: 0px 10px;
	}

	.post-img{
		max-width: 300px;
		width: 100%;
		height: auto;
		border-radius: 10px;
	}

	.post-content {
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		align-items: flex-start;
		gap: 10px;
	}

	.post-content > a {
		color: var(--colors.color_white);
	}
</style>
