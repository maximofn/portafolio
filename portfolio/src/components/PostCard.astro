---
const { color_palette } = await import('@portfolio/consts.json');
const { colors } = await import('@portfolio/consts.json');

interface Props {
	title: string;
	description: string;
	image_path: string;
	post_link: string;
}

const {
	title,
	description,
	image_path,
	post_link,
} = Astro.props;

const post_card_border_color = color_palette.color_300_transparent;
const post_card_background_color = color_palette.color_1500_transparent;
const content_color = colors.color_white;
---

<article class="post-card">
	<a href={post_link} class="post-anchor">
		<img class="post-img" src={image_path} alt={title} loading="lazy" transition:name={title} />
		<div class="post-content">
			<h3>{title}</h3>
			<p>{description}</p>
		</div>
	</a>
</article>

<style define:vars={{
	colors,
	post_card_border_color,
	post_card_background_color,
	content_color,
}}>
	.post-anchor {
		display: flex;
		flex-direction: row;
		justify-content: flex-start;
		align-items: flex-start;
		gap: 50px;
		border: var(--project_card_border_color) 1px solid;
		border-radius: 7px;
		background-color: var(--post_card_background_color);
		box-shadow: 3px 3px 6px 0 hsla(0, 0%, 100%, 0.3);
		width: 100%;
		padding: 30px 0px;
		margin: 20px 0px;
		color: var(--content_color);
		text-decoration: none;
	}
	@media (max-width: 500px) {
		.post-anchor {
			flex-direction: column;
		}
	}

	.post-img{
		align-self: center;
		max-width: 100%;
        height: auto;
        width: auto;
		border-radius: 7px;
		margin-inline: 50px;
	}
	@media (max-width: 418px) {
		.post-img {
			margin-inline: 0px;
		}
	}

	.post-content {
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		align-items: flex-start;
		flex-wrap: wrap;
		gap: 10px;
		width: 100%;
		margin-inline: 50px;
	}
	@media (max-width: 418px) {
		.post-content {
			margin-inline: 0px;
		}
	}

	.post-content p {
		text-wrap: pretty;
	}
	@media (max-width: 418px) {
		.post-content p {
			font-size: 0.5rem;
		}
	}

	h3 {
		margin: 0;
		padding: 0;
	}
</style>
