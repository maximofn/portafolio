---
const { color_palette } = await import('@portfolio/consts.json');
const { colors } = await import('@portfolio/consts.json');

interface Props {
	title: string;
	description: string;
	image_path: string;
	post_link: string;
}

const {
	title,
	description,
	image_path,
	post_link,
} = Astro.props;

// Obtener la URL actual para detectar el idioma
const currentPath = Astro.url.pathname;
console.log("La URL actual es: ", currentPath);

// Detectar el prefijo del idioma (si existe)
let languagePrefix = '';
if (currentPath.startsWith('/en/')) {
	languagePrefix = '/en';
} else if (currentPath.startsWith('/pt-br/')) {
	languagePrefix = '/pt-br';
}
console.log("El prefijo del idioma es: ", languagePrefix);

// Construir el enlace absoluto con el prefijo del idioma
let absolutePostLink = post_link;
console.log("El enlace absoluto es: ", absolutePostLink);

// Si el enlace no empieza con /, añadirlo
if (!absolutePostLink.startsWith('/')) {
	absolutePostLink = '/' + absolutePostLink;
}
console.log("El enlace absoluto es: ", absolutePostLink);

// Si hay un prefijo de idioma y el enlace no lo tiene ya, añadirlo
if (languagePrefix && !absolutePostLink.startsWith(languagePrefix)) {
	absolutePostLink = languagePrefix + absolutePostLink;
}
console.log("El enlace absoluto es: ", absolutePostLink);

const post_card_border_color = color_palette.color_300_transparent;
const post_card_background_color = color_palette.color_1500_transparent;
const content_color = colors.color_white;
---

<article class="post-card">
	<a href={absolutePostLink} class="post-anchor">
		<div class="post-img-container" transition:name={`post-image-${title.replace(/\s+/g, '-').toLowerCase()}`}>
			<img onerror="this.parentNode.removeChild(this)" decoding="async" class="post-img" src={image_path} alt={title} loading="lazy" />
		</div>
		<div class="post-content">
			<h3>{title}</h3>
			<p>{description}</p>
		</div>
	</a>
</article>

<style define:vars={{
	colors,
	post_card_border_color,
	post_card_background_color,
	content_color,
}}>
	.post-anchor {
		display: flex;
		flex-direction: row;
		justify-content: flex-start;
		align-items: flex-start;
		gap: 50px;
		border: var(--post_card_border_color) 1px solid;
		border-radius: 7px;
		background-color: var(--post_card_background_color);
		box-shadow: 3px 3px 6px 0 hsla(0, 0%, 100%, 0.3);
		width: 100%;
		padding: 30px 0px;
		margin: 20px 0px;
		color: var(--content_color);
		text-decoration: none;
	}
	@media (max-width: 500px) {
		.post-anchor {
			flex-direction: column;
		}
	}

	.post-img-container {
		align-self: center;
		margin-inline: 50px;
		display: flex;
		justify-content: center;
		align-items: center;
	}
	.post-img{
        height: auto;
        width: auto;
		border-radius: 7px;
	}
	@media (max-width: 500px) {
		.post-img-container {
			margin-inline: 0px;
		}
	}

	.post-content {
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		align-items: flex-start;
		flex-wrap: wrap;
		gap: 10px;
		width: 100%;
		margin-inline: 50px;
	}
	@media (max-width: 500px) {
		.post-content {
			margin-inline: 0px;
		}
	}

	.post-content p {
		text-wrap: pretty;
	}

	h3 {
		margin: 0;
		padding: 0;
	}
</style>
