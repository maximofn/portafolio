---
import GoToSite from './GoToSite.astro';

interface Props {
	title: string;
	description: string;
	image_path: string;
	post_link: string;
}

const { title, description, image_path, post_link } = Astro.props;
---

<article class="post-card">
	<a href={post_link}>
		<img class="post-img" src={image_path} alt={title} loading="lazy" />
	</a>
	<div class="post-content">
		<a href={post_link}>
			<h3>{title}</h3>
		</a>
		<p>{description}</p>
	</div>
	
</article>

<style>
	.post-card {
		display: flex;
		flex-direction: row;
		justify-content: flex-start;
		align-items: flex-start;
		gap: 10px;
	}

	.post-img{
		max-width: 300px;
		width: 100%;
		height: auto;
	}

	.post-content {
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		align-items: flex-start;
		gap: 10px;
	}

	.post-content > a {
		color: var(--color_white);
	}
</style>
