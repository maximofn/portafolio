---
import GoToSiteNoTransparent from './GoToSiteNoTransparent.astro';
import GoToSiteTransparent from './GoToSiteTransparent.astro';

const { color_palette } = await import('../../consts.json');
const { colors } = await import('../../consts.json');

interface Props {
	title: string;
	description: string;
	image_path: string;
	project_link: string;
	code_link: string;
}

const {
	title,
	description,
	image_path,
	project_link,
	code_link,
} = Astro.props;

const project_card_border_color = color_palette.color_300;
---

<article class="project-card">
	<header><h3>{title}</h3></header>

	<body>
		<img src={image_path} alt={title} loading="lazy" />
	</body>

	<footer>
		<p>{description}</p>
		<div class="project-links">
			<GoToSiteNoTransparent
				text="Ver proyecto"
				svg="icons/arrow-sm-right.svg"
				url={project_link}
				target=''
			></GoToSiteNoTransparent>
			<GoToSiteTransparent
				text="Ver cÃ³digo"
				svg="icons/arrow-up-right-from-square.svg"
				url={code_link}
				target='_blank'
			></GoToSiteTransparent>
		</div>
	</footer>
</article>

<style define:vars={{project_card_border_color}}>
	.project-card {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		align-items: center;

		padding: 30px;
		border-left: var(--project_card_border_color) 1px solid;
		border-right: var(--project_card_border_color) 1px solid;
		border-radius: 10px;
		max-width: 350px;
	}
	.project-card p {
		align-self: flex-start;
	}
	.project-card > img {
		max-width: 350px;
		width: 100%;
		height: auto;
		border-radius: 10px;
	}
	footer {
		width: 100%;
	}
	p {
		overflow: auto;
	}
	.project-links {
		display: flex;
		flex-direction: row;
		justify-content: space-around;
		align-items: center;
		width: 100%;
	}
</style>
