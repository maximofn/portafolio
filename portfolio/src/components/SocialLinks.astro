        </div>
        <div class="hover-img">
            <img onerror="this.parentNode.removeChild(this)" decoding="async" src={arrow_path} alt="arrow svg kaggle" />
        </div>
    </a>
    <a href={social_links.facebook_link} target="_blank" rel="nofollow noreferrer" aria-label="Facebook">
        <div class="no-hover-img">
            <FacebookBrandsSolid alt="Facebook Logo"/>
        </div>
        <div class="hover-img">
            <img onerror="this.parentNode.removeChild(this)" decoding="async" src={arrow_path} alt="arrow svg facebook" />
        </div>
    </a>
    <a href={social_links.instagram_link} target="_blank" rel="nofollow noreferrer" aria-label="Instagram">
        <div class="no-hover-img">
            <InstagramBrandsSolid alt="Instagram Logo"/>
        </div>
        <div class="hover-img">
            <img onerror="this.parentNode.removeChild(this)" decoding="async" src={arrow_path} alt="arrow svg instagram" />
        </div>
    </a>
    <!--<a href={social_links.tiktok_link} target="_blank" rel="nofollow noreferrer" aria-label="TikTok">
        <div class="no-hover-img">
            <TikTokBrandsSolid alt="TikTok Logo"/>
        </div>
        <div class="hover-img">
            <img onerror="this.parentNode.removeChild(this)" decoding="async" src={arrow_path} alt="arrow svg tiktok" />
        </div>
    </a>-->
