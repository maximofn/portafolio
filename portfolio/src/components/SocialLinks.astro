---
import GithubBrandsSolid from '@icons/GithubBrandsSolid.astro';
import HuggingFaceLogoPirate from '@icons/HuggingFaceLogoPirate.astro';
import LinkedinBrandsSolid from '@icons/LinkedinBrandsSolid.astro';
import XtwitterBrandsSolid from '@icons/XtwitterBrandsSolid.astro';
import KaggleBrandsSolid from '@icons/KaggleBrandsSolid.astro';
import FacebookBrandsSolid from '@icons/FacebookBrandsSolid.astro';
import InstagramBrandsSolid from '@icons/InstagramBrandsSolid.astro';
import TikTokBrandsSolid from '@icons/TikTokBrandsSolid.astro';
import TwitchBrandsSolid from '@icons/TwitchBrandsSolid.astro';
import YouTubeBrandsSolid from '@icons/YouTubeBrandsSolid.astro';
import CurriculumSolid from '@icons/CurriculumSolid.astro';

const { social_links } = await import('@portfolio/consts.json');
const { svg_paths } = await import('@portfolio/consts.json');
const { colors } = await import('@portfolio/consts.json');

interface Props {
    flex_direction: string,
}

const {
    flex_direction = 'row',
} = Astro.props;

const icon_background_color = colors.color_white;
const arrow_path = svg_paths.arrow_up_right_svg_path;
---

<nav>
    <a href={social_links.huggingface_link} target="_blank" rel="nofollow noreferrer" aria-label="Hugging Face">
        <div class="no-hover-img">
            <HuggingFaceLogoPirate alt="Hugging Face Logo"/>
        </div>
        <div class="hover-img">
            <img onerror="this.parentNode.removeChild(this)" decoding="async" src={arrow_path} alt="arrow svg hunging face" />
        </div>
    </a>
    <a href={social_links.github_link} target="_blank" rel="nofollow noreferrer" aria-label="Github">
        <div class="no-hover-img">
            <GithubBrandsSolid alt="Github Logo"/>
        </div>
        <div class="hover-img">
            <img onerror="this.parentNode.removeChild(this)" decoding="async" src={arrow_path} alt="arrow svg github" />
        </div>
    </a>
    <a href={social_links.linkedin_link} target="_blank" rel="nofollow noreferrer" aria-label="Linkedin">
        <div class="no-hover-img">
            <LinkedinBrandsSolid alt="Linkedin Logo"/>
        </div>
        <div class="hover-img">
            <img onerror="this.parentNode.removeChild(this)" decoding="async" src={arrow_path} alt="arrow svg linkedin" />
        </div>
    </a>
