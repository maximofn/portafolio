---
import Technologies_marquee from '@components/Technologies_marquee.astro'
import TechnologiesIcon from '@icons/TechnologiesIcon.astro';

interface Props {
    languaje: string,
}

const {
    languaje,
} = Astro.props;

if ( languaje === 'es' ) {
    var technologies_title = 'Tecnolog√≠as';
} else if ( languaje === 'en' ) {
    var technologies_title = 'Technologies';
} else if ( languaje === 'pt' ) {
    var technologies_title = 'Tecnologias';
}
---

<section class="projects">
    <h2>{technologies_title} <TechnologiesIcon /> </h2>
    <Technologies_marquee direction="left" />
    <!-- <Technologies_marquee direction="right" /> -->
</section>

<style>
    .projects {
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		gap: 50px;
		width: 100%;
	}
</style>