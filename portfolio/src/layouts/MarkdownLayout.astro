---
const { frontmatter } = Astro.props;
import Layout from '../layouts/Layout.astro';
---

<Layout 
	title={frontmatter.title}
	languaje={frontmatter.languaje}
	description={frontmatter.description}
	keywords={frontmatter.keywords}
	author={frontmatter.author}
	theme_color={frontmatter.theme_color}
	url={frontmatter.url}
	icon={frontmatter.icon}
	huggingface_svg_path={frontmatter.huggingface_svg_path},
	github_svg_path={frontmatter.github_svg_path},
	linkedin_svg_path={frontmatter.linkedin_svg_path},
	x_svg_path={frontmatter.x_svg_path},
	kaggle_svg_path={frontmatter.kaggle_svg_path},
	facebook_svg_path={frontmatter.facebook_svg_path},
	instagram_svg_path={frontmatter.instagram_svg_path},
	tiktok_svg_path={frontmatter.tiktok_svg_path},
	twitch_svg_path={frontmatter.twitch_svg_path},
	youtube_svg_path={frontmatter.youtube_svg_path},
	curriculum_svg_path={frontmatter.curriculum_svg_path},
	spain_flag_svg_path={frontmatter.spain_flag_svg_path},
	united_states_flag_svg_path={frontmatter.united_states_flag_svg_path},
	brazil_flag_svg_path={frontmatter.brazil_flag_svg_path},
	huggingface_link={frontmatter.huggingface_link},
	github_link={frontmatter.github_link},
	linkedin_link={frontmatter.linkedin_link},
	x_link={frontmatter.x_link},
	kaggle_link={frontmatter.kaggle_link},
	facebook_link={frontmatter.facebook_link},
	instagram_link={frontmatter.instagram_link},
	tiktok_link={frontmatter.tiktok_link},
	twitch_link={frontmatter.twitch_link},
	youtube_link={frontmatter.youtube_link},
	curriculum_link={frontmatter.curriculum_link},
	portfolio_link={frontmatter.portfolio_link}
	color_50={frontmatter.color_50},
	color_100={frontmatter.color_100},
	color_200={frontmatter.color_200},
	color_300={frontmatter.color_300},
	color_400={frontmatter.color_400},
	color_500={frontmatter.color_500},
	color_600={frontmatter.color_600},
	color_700={frontmatter.color_700},
	color_800={frontmatter.color_800},
	color_900={frontmatter.color_900},
	color_950={frontmatter.color_950}
	background_color={frontmatter.background_color},
	color_white={frontmatter.color_white},
	color_grid_dark={frontmatter.color_grid_dark},
	color_grid_light={frontmatter.color_grid_light},
>
    <main>
        <slot />
	<main/>
</Layout>

<style>

	main {
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		align-items: flex-start;
		gap: 0px;
		margin: 0px 50px;
		/* TODO ver si se puede poner el max width como variable */
		/* max-width: var(--max_width)px; */
		max-width: 1500px;
		height: auto;
		width: 100%;
	}

    main > main > img {
        width: 100px;
    }

    main > slot> h1 {
        color: green;
    }

    main > main > h2 {
		position: sticky;
		/* TODO poner este valor como constante */
		/* top var(--sticky_top_default); */
		top: 70px;
	}

</style>