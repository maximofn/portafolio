---
const { frontmatter } = Astro.props;
import Layout from '../layouts/Layout.astro';

const { max_width } = await import('../../consts.json');
---

<Layout 
	title={frontmatter.title}
	languaje={frontmatter.languaje}
	description={frontmatter.description}
	keywords={frontmatter.keywords}
	author={frontmatter.author}
	theme_color={frontmatter.theme_color}
	url={frontmatter.url}
	icon={frontmatter.icon}
>
    <main>
        <slot />
	<main/>
</Layout>

<style define:vars={{max_width}}>

	main {
		display: flex;
		flex-direction: column;
		justify-content: flex-start;
		align-items: flex-start;
		gap: 0px;
		margin: 0px 50px;
		max-width: var(--max_width);
		height: auto;
		width: 100%;
	}

    main > main > img {
        width: 100px;
    }

    main > slot> h1 {
        color: green;
    }

    main > main > h2 {
		position: sticky;
		/* TODO poner este valor como constante */
		/* top var(--sticky_top_default); */
		top: 70px;
	}

</style>