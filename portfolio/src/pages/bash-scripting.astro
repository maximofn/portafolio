      '<span class="w"> </span>',
      '<span class="k">if</span> <span class="p">[</span> <span class="s2">&quot;$x&quot;</span> <span class="o">-</span><span class="n">lt</span> <span class="s2">&quot;$y&quot;</span> <span class="p">];</span> <span class="n">then</span>',
