---
import Layout from '@layouts/Layout.astro';
import AllPosts from '@components/AllPosts.astro';

const { social_links } = await import('@portfolio/consts.json');
const { metadata_page } = await import('@portfolio/consts.json');
const { colors } = await import('@portfolio/consts.json');

const page_title = metadata_page.title + " - Blog";
const url = social_links.portfolio_link_external + "/blog"
const description = "Blog";
const keywords = "Blog";

const languaje = metadata_page.languaje_es;
---

<Layout 
	title={page_title}
	languaje={languaje}
	description={description}
	keywords={keywords}
	author={metadata_page.author}
	theme_color={colors.background_color}
	url={url}
	icon={metadata_page.icon}
>
    <AllPosts languaje={languaje}></AllPosts>
</Layout>