                color_600={color_600}
                color_700={color_700}
                color_800={color_800}
                color_900={color_900}
                color_950={color_950}
                color_white={color_white}
            ></GoToSite>
            <GoToSite
                text="Link button"
                svg="icons/arrow-sm-right.svg"
