      <CodeBlockInputCell
        text={[
      '<span></span><span class="err">!</span><span class="n">docker</span> <span class="n">exec</span> <span class="o">-</span><span class="n">it</span> <span class="n">alwaysup</span> <span class="n">bash</span>',
        ]}
