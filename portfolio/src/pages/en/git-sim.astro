const { colors } = await import('@portfolio/consts.json');
const { svg_paths } = await import('@portfolio/consts.json');

const page_title = 'git-sim';
const end_url = 'git-sim';
const description = 'If you are afraid ðŸ˜± to use git commands, come in and learn how to test them easily and graphically with git-sim ðŸ˜Š';
const keywords = 'git, git sim, git-sim, git commands, git rebase, git reset';
const languaje = 'EN';
