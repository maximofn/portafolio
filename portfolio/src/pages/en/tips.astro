---
import Layout from '@layouts/Layout.astro';
import AllTips from '@components/AllTips.astro';

const { social_links } = await import('@portfolio/consts.json');
const { metadata_page } = await import('@portfolio/consts.json');
const { colors } = await import('@portfolio/consts.json');

const page_title = metadata_page.title + " - Tips";
const url = social_links.portfolio_link_external + "/tips"
const description = "Tips";
const keywords = "Tips";

const languaje = metadata_page.languaje_en;
---

<Layout 
	title={page_title}
	languaje={languaje}
	description={description}
	keywords={keywords}
	author={metadata_page.author}
	theme_color={colors.background_color}
	url={url}
	icon={metadata_page.icon}
>
    <AllTips languaje={languaje}></AllTips>
</Layout>