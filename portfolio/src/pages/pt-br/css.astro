      <span class="sb">    ```html</span>
          <span class="cp">&lt;!DOCTYPE html&gt;</span>
          <span class="p">&lt;</span><span class="nt">html</span> <span class="na">lang</span><span class="o">=</span><span class="s">"pt"</span><span class="p">&gt;</span>
