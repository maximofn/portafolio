      <span class="p">&lt;</span><span class="nt">div</span><span class="p">&gt;</span>Texto 5<span class="p">&lt;/</span><span class="nt">div</span><span class="p">&gt;</span>
      ```<span class="p">&lt;</span><span class="nt">div</span><span class="p">&gt;</span>Texto 6<span class="p">&lt;/</span><span class="nt">div</span><span class="p">&gt;&lt;</span><span class="nt">div</span><span class="p">&gt;</span>Texto 7<span class="p">&lt;/</span><span class="nt">div</span><span class="p">&gt;</span>    <span class="p">&lt;</span><span class="nt">div</span><span class="p">&gt;</span>Texto 8<span class="p">&lt;/</span><span class="nt">div</span><span class="p">&gt;&lt;</span><span class="nt">div</span><span class="p">&gt;</span>Texto 9<span class="p">&lt;/</span><span class="nt">div</span><span class="p">&gt;&lt;/</span><span class="nt">section</span><span class="p">&gt;</span>
      ```css
