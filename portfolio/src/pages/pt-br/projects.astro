---
import Layout from '@layouts/Layout.astro';
import AllProjects from '@components/AllProjects.astro';

const { social_links } = await import('@portfolio/consts.json');
const { metadata_page } = await import('@portfolio/consts.json');
const { colors } = await import('@portfolio/consts.json');

const page_title = metadata_page.title + " - Proyectos";
const url = social_links.portfolio_link_external + "/projects"
const description = "Proyectos";
const keywords = "proyectos";

const languaje = metadata_page.languaje_pt;
---

<Layout 
	title={page_title}
	languaje={languaje}
	description={description}
	keywords={keywords}
	author={metadata_page.author}
	theme_color={colors.background_color}
	url={url}
	icon={metadata_page.icon}
>
	<h1>Proyectos</h1>

    <AllProjects languaje={languaje}></AllProjects>
</Layout>
